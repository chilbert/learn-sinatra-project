<h4 class="wine-header">Update Wine - <%= @wine.wine_name %></h4>
<small>You must enter all fields to successfully update a wine.</small>

<div class="add-wine">
<form action="/wines/<%= @wine.id %>" method="POST">
  <input type="hidden" name="_method" value="patch">
  <div class="form-group">
    <label for="wine_name">Wine Name</label>
    <input type="text" value="<%= @wine.wine_name %>" class="form-control" id="wine_name" placeholder="Enter Wine Name" name="wine_name" required>
  </div>
  <div class="form-group">
    <label for="wine_variety">Wine Variety</label>
    <input type="text" value="<%= @wine.wine_variety %>" class="form-control" id="wine_variety" placeholder="Enter Wine Variety" name="wine_variety" required>
  </div>
  <div class="form-group">
    <label for="wine_vintage">Wine Vintage</label>
    <input type="text" value="<%= @wine.wine_vintage %>" class="form-control" id="wine_vintage" placeholder="Enter Wine Vintage" name="wine_vintage" required>
  </div>
  <div class="form-group">
    <label for="bottle_count">Bottle Count</label>
    <input type="text" value="<%= @wine.bottle_count %>" class="form-control" id="bottle_count" placeholder="Enter Bottle Count" name="bottle_count" required>
  </div>
  <button type="submit" class="btn btn-primary">Update</button>
</form>
</div>

